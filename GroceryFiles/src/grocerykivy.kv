<RecipeScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation:'horizontal'
            Label:
                id: Instant_Pot_Hamburger_Soup
                text: 'Instant Pot Hamburger Soup'

            CheckBox:
                id: Instant_Pot_Hamburger_Soup_checkBox
                on_active: root.GetRecipe(1, root.ids.Instant_Pot_Hamburger_Soup_count.text, self.active)

            TextInput:
                id: Instant_Pot_Hamburger_Soup_count
                size_hint: .2,.2
                pos_hint: {'center_y':.5}
                multiline: False
                text: '1'
                on_text: root.OnUpdateCount(1, self.text, root.ids.Instant_Pot_Hamburger_Soup_checkBox.active)

        BoxLayout:
            orientation:'horizontal'
            Label:
                id: Seafood_Pot_Pie_label
                text: 'Seafood Pot Pie'

            CheckBox:
                id: Seafood_Pot_Pie_checkbox
                on_active: root.GetRecipe(2, root.ids.Seafood_Pot_Pie_count.text, self.active)

            TextInput:
                id: Seafood_Pot_Pie_count
                size_hint: .2,.2
                pos_hint: {'center_y':.5}
                multiline: False
                text: '1'
                on_text: root.OnUpdateCount(2, self.text, root.ids.Seafood_Pot_Pie_checkbox.active)


        BoxLayout:
            size_hint: 1, .5
            Label:
                id: Recipe_List
                text: "test"

        BoxLayout:
            orientation: 'vertical'

<NewRecipeScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Add A New Recipe'
            size_hint: 1, .05

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .05

            Label:
                text: "Recipe Name"

            TextInput:
                multiline: False
            
        IngredientInfo:

<IngredientInfo>
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    cols: 4
    Label:
        text: 'Ingr 1, Liquid or solid'
        size_hint: 1, .1
    TextInput:
        multiline: False
        size_hint: 1, .1
    BoxLayout:
        size_hint: 1, .1
        orientation: 'horizontal'
        Label:
            text: 'solid'
        CheckBox:
            group: 'sol-liq'
    BoxLayout:
        size_hint: 1, .1
        orientation: 'horizontal'
        Label:
            text: 'liquid'
        CheckBox:
            group: 'sol-liq'
            
    Label:
        text: 'Weight in Cups, Tbs, tsp'
        size_hint: 1, .1
    TextInput:
        multiline: False
        size_hint: 1, .1
    TextInput:
        multiline: False
        size_hint: 1, .1
    TextInput:
        multiline: False
        size_hint: 1, .1
    BoxLayout:


<SearchRecipeScreen>
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .05
            Label:
                text: 'Search Recipe'
                size_hint: .25, 1
            TextInput:
                id: URS
                text: 'Chicken'
                multiline: False
                on_text_validate: root.search_Rsql(self.text)
            Button:
                text: "Q"
                size_hint: .05, 1
                on_press: root.search_Rsql(root.ids.URS.text)


        BoxLayout:
            orientation: "vertical"

            MDScrollView:
                bar_width: 10
                MDList:
                    id: recipe_list
                    background_color: 0, 0, 0, 1


<NavBar>:
    panel_color: "#eeeaea"
    selected_color_background: "orange"
    text_color_active: "lightgrey"

    MDBottomNavigationItem:
        name: 'screen 1'
        text: 'Mail'
        icon: 'gmail'

        BoxLayout:
            RecipeScreen:

    MDBottomNavigationItem:
        name: 'screen 2'
        text: 'Twitter'
        icon: 'twitter'

        BoxLayout:
            NewRecipeScreen:

    MDBottomNavigationItem:
        name: 'screen 3'
        text: 'LinkedIN'
        icon: 'linkedin'

        BoxLayout:
            SearchRecipeScreen:

