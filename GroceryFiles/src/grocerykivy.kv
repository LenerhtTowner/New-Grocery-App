<RecipeScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            id: RecipeScreenBox
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            spacing: 20

        BoxLayout:

<NewRecipeScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Add A New Recipe'
            size_hint: 1, .05

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .05

            Label:
                text: "Recipe Name"

            TextInput:
                multiline: False
            
        IngredientInfo:

<IngredientInfo>
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    cols: 4
    Label:
        text: 'Ingr 1, Liquid or solid'
        size_hint: 1, .1
    TextInput:
        multiline: False
        size_hint: 1, .1
    BoxLayout:
        size_hint: 1, .1
        orientation: 'horizontal'
        Label:
            text: 'solid'
        CheckBox:
            group: 'sol-liq'
    BoxLayout:
        size_hint: 1, .1
        orientation: 'horizontal'
        Label:
            text: 'liquid'
        CheckBox:
            group: 'sol-liq'
            
    Label:
        text: 'Weight in Cups, Tbs, tsp'
        size_hint: 1, .1
    TextInput:
        multiline: False
        size_hint: 1, .1
    TextInput:
        multiline: False
        size_hint: 1, .1
    TextInput:
        multiline: False
        size_hint: 1, .1
    BoxLayout:


<SearchRecipeScreen>
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .05
            Label:
                text: 'Search Recipe'
                size_hint: .25, 1
            TextInput:
                id: URS
                text: 'Chicken'
                multiline: False
                on_text_validate: root.search_Rsql(self.text)
            Button:
                text: "Q"
                size_hint: .05, 1
                on_press: root.search_Rsql(root.ids.URS.text)


        BoxLayout:
            orientation: "vertical"

            MDScrollView:
                bar_width: 10
                MDList:
                    id: recipe_list
                    background_color: 0, 0, 0, 1


<NavBar>:
    panel_color: "#eeeaea"
    selected_color_background: "orange"
    text_color_active: "lightgrey"

    MDBottomNavigationItem:
        name: 'screen 1'
        text: 'Home'
        icon: 'home'

        BoxLayout:
            RecipeScreen:

    MDBottomNavigationItem:
        name: 'screen 2'
        text: 'New Recipe'
        icon: 'plus'

        BoxLayout:
            NewRecipeScreen:

    MDBottomNavigationItem:
        name: 'screen 3'
        text: 'Find Recipe'
        icon: 'view-list'

        BoxLayout:
            SearchRecipeScreen:

<MainScreen>
    NavBar:

<RecipeListItem>
    canvas.before:
        Color:
            rgba: .8, .8, .8, 1
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint: 1, None
    height: 40
    Label:
        id: recipe_label
        valign: "center"
        text: ""
        size_hint: 1, 1
    CheckBox:
        background_normal: None
        color: 0, 0, 0, 1
        id: recipe_check
        size_hint: (1, None)
        size: (40, 40)
    TextInput:
        id: recipe_count
        size_hint: (None,None)
        size: (40, 40)
        multiline: False
        text: '1'
