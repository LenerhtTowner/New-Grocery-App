<RecipeScreen>:
    canvas.before:
        Color:
            rgba: .1, .1, .12, 1
        Rectangle:
            pos: self.pos
            size: self.size

    ScrollView:
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height

            BoxLayout:
                id: RecipeScreenBox
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                spacing: 20
                padding: (0, 10)

<NewRecipeScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Add A New Recipe'
            size_hint: 1, .05

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .05

            Label:
                text: "Recipe Name"

            TextInput:
                multiline: False

        IngredientInfo:

<IngredientInfo>
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    cols: 4
    Label:
        text: 'Ingr 1, Liquid or solid'
        size_hint: 1, .1
    TextInput:
        multiline: False
        size_hint: 1, .1
    BoxLayout:
        size_hint: 1, .1
        orientation: 'horizontal'
        Label:
            text: 'solid'
        CheckBox:
            group: 'sol-liq'
    BoxLayout:
        size_hint: 1, .1
        orientation: 'horizontal'
        Label:
            text: 'liquid'
        CheckBox:
            group: 'sol-liq'

    Label:
        text: 'Weight in Cups, Tbs, tsp'
        size_hint: 1, .1
    TextInput:
        multiline: False
        size_hint: 1, .1
    TextInput:
        multiline: False
        size_hint: 1, .1
    TextInput:
        multiline: False
        size_hint: 1, .1
    BoxLayout:


<SearchRecipeScreen>
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .05
            Label:
                text: 'Search Recipe'
                size_hint: .25, 1
            TextInput:
                id: URS
                text: 'Chicken'
                multiline: False
                on_text_validate: root.search_Rsql(self.text)
            Button:
                text: "Q"
                size_hint: .05, 1
                on_press: root.search_Rsql(root.ids.URS.text)


        BoxLayout:
            orientation: "vertical"

            MDScrollView:
                bar_width: 10
                MDList:
                    id: recipe_list
                    background_color: 0, 0, 0, 1


<NavBar>:
    panel_color: (.93, .9, .9)
    selected_color_background: "orange"
    text_color_active: "lightgrey"

    MDBottomNavigationItem:
        name: 'screen 1'
        text: 'Home'
        icon: 'home'

        BoxLayout:
            GroceryListScreen:
                id: groceryListScreen

    MDBottomNavigationItem:
        name: 'screen 2'
        text: 'New Recipe'
        icon: 'plus'

        BoxLayout:
            NewRecipeScreen:
            

    MDBottomNavigationItem:
        name: 'screen 3'
        text: 'Local Recipes'
        icon: 'view-list'

        BoxLayout:
            RecipeScreen:

    MDBottomNavigationItem:
        name: 'screen 4'
        text: 'Find Recipe'
        icon: 'twitter'

        BoxLayout:
            SearchRecipeScreen:

<RecipeListItem>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            width:
            rectangle: self.x, self.y, self.width, self.height
    size_hint: 1, None
    height: 40
    padding: (10, 5)
    # CheckBox:
    #     background_normal: None
    #     color: 1, 1, 1, 1
    #     id: recipe_check
    #     size_hint: (None, None)
    #     size: (50, 30)
    Label:
        id: recipe_label
        valign: "center"
        halign: "left"
        text_size: self.size
        size_hint: 1, 1
        markup: True
    TextInput:
        id: recipe_count
        size_hint: (None,None)
        size: (30, 30)
        multiline: False
        text: '1'

<MainScreen>
    NavBar:

<RecipeDataPanel>
    padding: "20dp"
    orientation: "vertical"
    Label:
        markup: True
        text: "[u]Ingredients[/u]"
        font_size: 24
        size_hint: 1, None
        height: self.font_size * 2
        text_size: self.size
        halign: "left"
        valign: "center"
    Label:
        id: IngredientLabel
        text_size: self.width, None
        size_hint: 1, None
        height: self.texture_size[1]

    Label:
        markup: True
        text: "[u]Method[/u]"
        font_size: 24
        size_hint: 1, None
        height: self.font_size * 2
        text_size: self.size
        halign: "left"
        valign: "center"

    BoxLayout:
        ScrollView:
            Label:
                id: MethodLabel
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]