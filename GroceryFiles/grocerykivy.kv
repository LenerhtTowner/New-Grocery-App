<RecipeScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation:'horizontal'
            Label:
                id: pancakes
                text: 'pancakes'

            CheckBox:
                id: pancakes_checkBox
                on_active: root.GetRecipe(root.ids.pancakes.text, root.ids.pancakes_count.text, self.active)

            TextInput:
                id: pancakes_count
                size_hint: .2,.2
                pos_hint: {'center_y':.5}
                multiline: False
                text: '1'
                on_text: root.UpdateCount(root.ids.pancakes.text, self.text, root.ids.pancakes_checkBox.active)

        BoxLayout:
            orientation:'horizontal'
            Label:
                id: broccoli_cheddar_soup_label
                text: 'broccoli cheddar soup'

            CheckBox:
                id: broccoli_cheddar_soup_checkbox
                on_active: root.GetRecipe(root.ids.broccoli_cheddar_soup_label.text, root.ids.broccoli_cheddar_soup_count.text, self.active)

            TextInput:
                id: broccoli_cheddar_soup_count
                size_hint: .2,.2
                pos_hint: {'center_y':.5}
                multiline: False
                text: '1'
                on_text: root.UpdateCount(root.ids.broccoli_cheddar_soup_label.text, self.text, root.ids.broccoli_cheddar_soup_checkbox.active)


        BoxLayout:
            size_hint: 1, .5
            Label:
                id: Recipe_List
                text: "test"

        BoxLayout:
            orientation: 'vertical'

            Button:
                text: 'Goto "Make New Recipe" Screen'
                on_press:
                    root.manager.current = 'NewRecipe'
            Button:
                text: 'Quit'
                on_press: exit()

<NewRecipeScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Add A New Recipe'

        BoxLayout:
            orientation: 'horizontal'

            Label:
                text: "Recipe Name"

            TextInput:
                multiline: False
            
        IngredientInfo:
            
        Button:
            text: 'Recipe Screen:'
            on_press: root.manager.current = 'Recipe'
            
        Button:
            text: 'Search Recipe Screen:'
            on_press: root.manager.current = 'SearchRecipe'

<IngredientInfo>
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    cols: 4
    Label:
        text: 'Ingr 1, Liquid or solid'
    TextInput:
        multiline: False
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'solid'
        CheckBox:
            group: 'sol-liq'
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'liquid'
        CheckBox:
            group: 'sol-liq'
            
    Label:
        text: 'Weight in Cups, Tbs, tsp'
    TextInput:
        multiline: False
    TextInput:
        multiline: False
    TextInput:
        multiline: False


<SearchRecipeScreen>
            
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .05
            Label:
                text: 'Search Recipe'
                size_hint: .25, 1
            TextInput:
                id: URS
                text: 'Chicken'
                multiline: False
                on_text_validate: root.search_Rsql(self.text)
            Button:
                text: "Q"
                size_hint: .05, 1
                on_press: root.search_Rsql(root.ids.URS.text)
            
        
        BoxLayout:
            orientation: "vertical"

            MDScrollView:
                bar_width: 10
                MDList:
                    id: recipe_list
                    background_color: 0, 0, 0, 1
